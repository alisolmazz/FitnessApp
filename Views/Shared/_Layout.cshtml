@using Microsoft.AspNetCore.Identity
@using FitnessApp.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="tr" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessApp</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;900&display=swap" rel="stylesheet">

    <style>
        /* --- GENEL AYARLAR --- */
        html, body {
            height: 100%;
            margin: 0; padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #1a1a1d; 
        }

        body { display: flex; flex-direction: column; }

        /* --- NAVBAR --- */
        .navbar-custom {
            background: rgba(20, 20, 25, 0.95);
            backdrop-filter: blur(15px);
            padding: 0; /* Padding'i sıfırladık, yükseklikle yöneteceğiz */
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            position: fixed; 
            width: 100%;
            top: 0;
            z-index: 1030;
            height: 100px; /* YÜKSEKLİK SABİT: 100px */
            display: flex;
            align-items: center;
        }

        .navbar-custom::after {
            content: ''; position: absolute; bottom: 0; left: 0; width: 100%; height: 1px;
            background: linear-gradient(90deg, transparent, #38ef7d, #00c6ff, transparent);
            box-shadow: 0 0 10px rgba(56, 239, 125, 0.5);
        }

        .navbar-brand { font-weight: 800; font-size: 1.6rem; color: #fff !important; letter-spacing: 1px; text-shadow: 0 0 20px rgba(255,255,255,0.2); }
        .navbar-brand i { color: #38ef7d; filter: drop-shadow(0 0 5px rgba(56,239,125,0.8)); }
        .nav-link { color: rgba(255,255,255,0.7) !important; font-weight: 500; margin: 0 12px; transition: all 0.3s; }
        .nav-link:hover { color: #fff !important; text-shadow: 0 0 10px rgba(255,255,255,0.5); }

        /* Butonlar */
        .btn-nav-action { background: linear-gradient(45deg, #11998e, #38ef7d); color: #000 !important; border-radius: 50px; padding: 8px 25px !important; font-weight: 700; border: none; }
        .btn-nav-action:hover { box-shadow: 0 0 25px rgba(56, 239, 125, 0.6); transform: scale(1.05); }
        .btn-nav-ai { background: linear-gradient(45deg, #00c6ff, #0072ff); color: #fff !important; }
        .btn-nav-ai:hover { box-shadow: 0 0 25px rgba(0, 198, 255, 0.6); }

        /* Dropdown */
        .dropdown-menu-custom { background: rgba(30, 30, 35, 0.95); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 15px; padding: 10px; min-width: 260px; margin-top: 15px; box-shadow: 0 15px 40px rgba(0, 0, 0, 0.6); animation: dropdownFadeIn 0.3s ease; }
        .dropdown-user-info { padding: 10px 15px; border-bottom: 1px solid rgba(255, 255, 255, 0.1); margin-bottom: 10px; }
        .dropdown-user-info small { color: #888; font-size: 0.7rem; display: block; margin-bottom: 2px; }
        .dropdown-user-info span { color: #fff; font-weight: 600; font-size: 0.9rem; }
        .dropdown-item-custom { color: #ccc; padding: 12px 15px; border-radius: 10px; font-size: 0.9rem; display: flex; align-items: center; font-weight: 500; margin-bottom: 5px; }
        .item-admin:hover { background: rgba(0, 198, 255, 0.15); color: #00c6ff; }
        .item-appointments:hover { background: rgba(56, 239, 125, 0.15); color: #38ef7d; }
        .item-logout:hover { background: rgba(255, 77, 77, 0.15); color: #ff4d4d; }
        @Html.Raw("@keyframes dropdownFadeIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }")

        /* --- İÇERİK ALANI (SORUNUN ÇÖZÜMÜ BURADA) --- */
        .main-content {
            flex: 1 0 auto;
            width: 100%;
            overflow-x: hidden;
            /* Navbar 100px olduğu için içeriği 100px aşağı itiyoruz */
            padding-top: 100px; 
        }

        /* FOOTER */
        footer { flex-shrink: 0; background-color: #0f0f10; color: #888; padding: 60px 0 30px 0; position: relative; z-index: 10; box-shadow: 0 -10px 50px rgba(0,0,0,0.8); }
        footer::before { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 1px; background: linear-gradient(90deg, transparent, #00c6ff, #38ef7d, transparent); box-shadow: 0 0 15px rgba(0, 198, 255, 0.3); }
        footer a { color: #ccc; text-decoration: none; transition: 0.3s; }
        footer a:hover { color: #38ef7d; text-shadow: 0 0 10px rgba(56, 239, 125, 0.5); }
        .footer-icon-link { width: 40px; height: 40px; background: rgba(255,255,255,0.05); display: inline-flex; align-items: center; justify-content: center; border-radius: 50%; margin-right: 10px; transition: 0.3s; }
        .footer-icon-link:hover { background: #38ef7d; color: #000 !important; transform: translateY(-3px); }

    </style>
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-dumbbell me-2"></i>FITNESS<span class="text-white-50">APP</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Services" asp-action="Index">Hizmetler</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Trainers" asp-action="Index">Eğitmenler</a></li>
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link btn-nav-action" asp-controller="Appointment" asp-action="Booking">
                                    <i class="fa fa-calendar-plus me-1"></i> Randevu Al
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link btn-nav-action btn-nav-ai" asp-controller="Ai" asp-action="Index">
                                    <i class="fa fa-robot me-1"></i> AI Koç
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="bg-white text-dark rounded-circle d-flex justify-content-center align-items-center me-2 shadow-sm" style="width: 40px; height: 40px; font-weight: 800; border: 2px solid #38ef7d;">
                                        @User.Identity.Name.Substring(0,1).ToUpper()
                                    </div>
                                    <div class="d-none d-lg-block">
                                        <span class="small text-white fw-bold d-block" style="line-height: 1;">Hesabım</span>
                                        <small class="text-white-50" style="font-size: 0.7rem;">Profil Ayarları</small>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-custom dropdown-menu-end">
                                    <li><div class="dropdown-user-info"><small>OTURUM AÇAN KULLANICI</small><span>@User.Identity.Name</span></div></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item dropdown-item-custom item-admin" asp-controller="Admin" asp-action="Index"><i class="fa fa-user-shield"></i> Yönetim Paneli</a></li>
                                    }
                                    <li><a class="dropdown-item dropdown-item-custom item-appointments" asp-controller="Appointment" asp-action="Index"><i class="fa fa-calendar-check"></i> Randevularım</a></li>
                                    <li><hr class="dropdown-divider bg-secondary opacity-25 my-2"></li>
                                    <li><a class="dropdown-item dropdown-item-custom item-logout" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out-alt"></i> Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
                            <li class="nav-item ms-2"><a class="nav-link btn-nav-action" asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-white fw-bold mb-3"><i class="fa fa-dumbbell me-2"></i>FITNESSAPP</h5>
                    <p class="small">Sporu hayatının bir parçası yap. Uzman eğitmenler ve yapay zeka destekli programlarla hedefine ulaş.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-white fw-bold mb-3">Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Index">Ana Sayfa</a></li>
                        <li><a href="/Services/Index">Hizmetlerimiz</a></li>
                        <li><a href="/Trainers/Index">Eğitmen Kadrosu</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-white fw-bold mb-3">İletişim</h5>
                    <p class="small mb-1"><i class="fa fa-map-marker-alt me-2"></i> Sakarya Üniversitesi, Teknokent</p>
                    <p class="small mb-1"><i class="fa fa-phone me-2"></i> +90 551 199 7332</p>
                    <p class="small"><i class="fa fa-envelope me-2"></i> ali.solmaz@ogr.sakarya.edu.tr</p>
                    <div class="mt-3">
                        <a href="https://www.instagram.com/alisolmz_/" target="_blank" class="footer-icon-link text-white"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="footer-icon-link text-white"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="footer-icon-link text-white"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-top border-secondary pt-3 text-center small mt-3 text-white-50">
                &copy; 2024 FitnessApp - Tüm Hakları Saklıdır. | Ali Solmaz
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>