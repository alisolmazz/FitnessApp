@model IEnumerable<FitnessApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container mt-5">
    <h1 class="text-center mb-5 display-4 text-primary">Sunduğumuz Hizmetler</h1>
    <p class="lead text-center text-muted">Uzman eğitmenlerimiz eşliğinde hedeflerinize ulaşın.</p>

    <div class="row g-4 mt-4">
        @if (Model.Any())
        {
            @foreach (var service in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-lg border-0 rounded-3 overflow-hidden">
                        <!-- Kart Resmi -->
                        <img src="~/images/@service.ImageUrl" 
                             class="card-img-top" 
                             alt="@service.ServiceName" 
                             style="height: 200px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-success">@service.ServiceName</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @(service.Description.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)
                            </p>
                            
                            <!-- Fiyat ve Süre Bilgisi -->
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <i class="fa fa-clock text-primary"></i> Süre
                                    <strong>@service.DurationMinutes dk</strong>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <i class="fa fa-money-bill-wave text-success"></i> Ücret
                                    <strong>@service.Price ₺</strong>
                                </li>
                            </ul>

                            <!-- Randevu al butonu (Giriş yapılmışsa çıkar) -->
                            <a asp-controller="Appointment" asp-action="Booking" class="btn btn-primary mt-auto">
                                Hemen Randevu Al
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-danger">Şu anda sunulan bir hizmet bulunmamaktadır.</div>
            </div>
        }
    </div>
</div>