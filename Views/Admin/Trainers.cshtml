@model IEnumerable<FitnessApp.Models.Trainer>
@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Eğitmen Listesi</h2>
        <a asp-action="CreateTrainer" class="btn btn-success">+ Yeni Eğitmen Ekle</a>
    </div>
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Resim</th>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Mesai Saatleri</th>
                <th style="width: 100px;">İşlem</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.ImageUrl" width="50" height="50" style="object-fit: cover;" class="rounded-circle" />
                        </td>
                        <td>@item.FullName</td>
                        <td><span class="badge bg-info text-dark">@item.Specialization</span></td>
                        <td>@item.WorkStartTime.ToString(@"hh\:mm") - @item.WorkEndTime.ToString(@"hh\:mm")</td>
                        <td class="text-center">
                            <!-- SİLME BUTONU -->
                            <a asp-action="DeleteTrainer" asp-route-id="@item.TrainerId"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('@item.FullName isimli eğitmeni silmek istediğinize emin misiniz?');">
                                <i class="fa fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Kayıtlı eğitmen bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>