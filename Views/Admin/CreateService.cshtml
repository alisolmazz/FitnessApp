@model FitnessApp.Models.Service
@{ ViewData["Title"] = "Hizmet Ekle"; }

<div class="container mt-4">
    <h2>Yeni Hizmet Ekle</h2>
    <form asp-action="CreateService" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label>Hizmet Adı (Örn: Yoga, Kardiyo Seansı)</label>
            <input asp-for="ServiceName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Süre (Dakika)</label>
                <input asp-for="DurationMinutes" type="number" class="form-control" required />
            </div>
            <div class="col-md-6 mb-3">
                <label>Ücret (TL)</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
            </div>
        </div>
        <div class="mb-3">
            <label>Kapak Resmi</label>
            <input type="file" name="file" class="form-control" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>